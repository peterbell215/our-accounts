
<%= form_with(model: account, url: accounts_path, local: true, html: { class: "pure-form pure-form-aligned" }) do |form| %>
  <% if account.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(account.errors.count, "error") %> prohibited this account from being saved:</h2>
      <ul>
        <% account.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="pure-control-group">
    <%= form.label :type %>
    <%= form.select :type, options_for_select([['Bank Account', 'BankAccount'], ['Credit Card', 'CreditCardAccount']]), {}, id:"type", class: "pure-input-1-4" %>
  </div>

  <div class="pure-control-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "pure-input-1-3" %>
  </div>

  <div class="pure-control-group">
    <%= form.label :account_number %>
    <%= form.text_field :account_number, class: "pure-input-1-4" %>
  </div>

  <div id="sortcode" class="pure-control-group">
    <%= form.label :sortcode %>
    <%= form.text_field :sortcode, class: "pure-input-1-4" %>
  </div>

  <div class="pure-control-group">
    <%= form.label :opening_date %>
    <%= form.date_field :opening_date, class: "pure-input-1-4" %>
  </div>

  <div class="pure-control-group">
    <%= form.label :opening_balance %>
    <%= form.text_field :opening_balance, class: "pure-input-1-4" %>
  </div>

  <div class="pure-controls">
    <%= form.submit class: "pure-button pure-button-primary" %>
  </div>
<% end %>

<%= javascript_include_tag "accounts" %>